{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,
    // Path Aliases: : If you move a library, you only need to update the path in one place
    "paths": {
      "@app/framework":["libs/framework/src"],
      "@app/framework/*":["libs/framework/*"],
      "@app/rabbitMq":["libs/rabbitMq/src"],
      "@app/rabbitMq/*":["libs/rabbitMq/*"],
      "@app/common":["libs/common/src"],
      "@app/common/*":["libs/common/*"],
      "@app/mongodb":["libs/mongoDb/src"],
      "@app/mongodb/*":["libs/mongoDb/*"],
      "@app/config":["libs/config/src"],
      "@app/config/*":["libs/config/*"]
    }
  }
}
